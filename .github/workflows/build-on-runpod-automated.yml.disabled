name: Build on RunPod (Automated)

on:
  push:
    branches: [ main ]
    paths:
      - 'deepseek_ocr_server.py'
      - 'Dockerfile.deepseek*'
      - 'scripts/runpod_build_automation.py'
      - '.github/workflows/build-on-runpod-automated.yml'
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout repository
      uses: actions/checkout@v4

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.10'
    
    - name: Install dependencies
      run: |
        pip install requests paramiko cryptography
    
    - name: Verify RunPod API Key
      run: |
        if [ -z "${{ secrets.RUNPOD_API_KEY }}" ]; then
          echo "âŒ RUNPOD_API_KEY secret is not set!"
          echo ""
          echo "ğŸ“ To fix:"
          echo "1. Go to: https://github.com/${{ github.repository }}/settings/secrets/actions"
          echo "2. Click 'New repository secret'"
          echo "3. Name: RUNPOD_API_KEY"
          echo "4. Value: Your RunPod API key from https://www.runpod.io/console/user/settings"
          echo "5. Click 'Add secret'"
          exit 1
        else
          echo "âœ… RUNPOD_API_KEY is set"
          echo "ğŸ”‘ Key length: ${#RUNPOD_API_KEY} characters"
          echo "ğŸ”‘ Key prefix: ${RUNPOD_API_KEY:0:8}..."
        fi
      env:
        RUNPOD_API_KEY: ${{ secrets.RUNPOD_API_KEY }}
    
    - name: Build on RunPod
      env:
        RUNPOD_API_KEY: ${{ secrets.RUNPOD_API_KEY }}
        GITHUB_REPOSITORY: ${{ github.repository }}
        GITHUB_SHA: ${{ github.sha }}
        GITHUB_ACTOR: ${{ github.actor }}
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        REGISTRY: ghcr.io
        REGISTRY_USER: ${{ github.actor }}
        REGISTRY_TOKEN: ${{ secrets.GITHUB_TOKEN }}
      run: |
        python3 scripts/runpod_build_automation.py
    
    - name: Build Summary
      if: success()
      run: |
        echo ""
        echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
        echo "âœ… DOCKER BUILD SUCCESSFUL!"
        echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
        echo ""
        echo "ğŸ“¦ Image: ghcr.io/${{ github.repository }}/deepseek-ocr:latest"
        echo "ğŸ·ï¸  Tag: ghcr.io/${{ github.repository }}/deepseek-ocr:${{ github.sha }}"
        echo "ğŸ’° Cost: ~$0.01 (3-5 minutes on RunPod spot)"
        echo ""
        echo "ğŸ¯ Image is ready to deploy!"
        echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    
