# Optional: Build to Docker Hub instead of GitHub Container Registry
# To enable: Remove .disabled extension and add Docker Hub secrets
# Required secrets: DOCKER_USERNAME, DOCKER_PASSWORD

name: Build to Docker Hub (Optional)

on:
  workflow_dispatch:  # Manual trigger only

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v4

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v3

    - name: Log in to Docker Hub
      uses: docker/login-action@v3
      with:
        username: ${{ secrets.DOCKER_USERNAME }}
        password: ${{ secrets.DOCKER_PASSWORD }}

    - name: Build and push to Docker Hub
      uses: docker/build-push-action@v5
      with:
        context: .
        file: ./Dockerfile.deepseek.prebuilt
        platforms: linux/amd64
        push: true
        tags: |
          ${{ secrets.DOCKER_USERNAME }}/deepseek-ocr-server:latest
          ${{ secrets.DOCKER_USERNAME }}/deepseek-ocr-server:${{ github.sha }}
        cache-from: type=gha
        cache-to: type=gha,mode=max

